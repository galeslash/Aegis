<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alphacr.theredjournal.HistoryDetails">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/tearred"
        android:layout_marginTop="11dp"
        android:id="@+id/detailsImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Donation Details"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/detailsImage"
        android:layout_toRightOf="@+id/detailsImage"
        android:layout_toEndOf="@+id/detailsImage"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/detailsTitle" />

    <TextView
        android:text="01 Nov 2016,"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/detailsDate"
        android:layout_alignBottom="@+id/detailsImage"
        android:layout_alignLeft="@+id/detailsTitle"
        android:layout_alignStart="@+id/detailsTitle"
        android:paddingTop="10dp"/>

    <TextView
        android:background="#F0F0F0"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/detailsImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/detailsBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Service Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/detailsBox"
        android:layout_toLeftOf="@+id/detailsDate"
        android:layout_toStartOf="@+id/detailsDate"
        android:paddingTop="5dp"
        android:id="@+id/detailsServiceText" />

    <TextView
        android:text="Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsService"
        android:layout_alignBottom="@+id/detailsBox"
        android:layout_alignLeft="@+id/detailsServiceText"
        android:layout_alignStart="@+id/detailsServiceText"
        android:paddingBottom="5dp"/>

    <TextView
        android:background="#F0F0F0"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/detailsBox2"
        android:layout_below="@+id/detailsBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/detailsBox2"
        android:layout_alignLeft="@+id/detailsService"
        android:layout_alignStart="@+id/detailsService"
        android:id="@+id/detailsAmountText"
        android:paddingTop="5dp"/>

    <TextView
        android:text="One Pint (473 ml)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/detailsBox2"
        android:layout_alignLeft="@+id/detailsAmountText"
        android:layout_alignStart="@+id/detailsAmountText"
        android:id="@+id/detailsAmount"
        android:paddingBottom="5dp"/>

    <TextView
        android:background="#F0F0F0"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/detailsBox2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/detailsBox3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Blood Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/detailsBox3"
        android:layout_alignLeft="@+id/detailsAmount"
        android:layout_alignStart="@+id/detailsAmount"
        android:id="@+id/detailsTypeText"
        android:paddingTop="5dp"/>

    <TextView
        android:text="AB+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/detailsBox3"
        android:layout_alignLeft="@+id/detailsTypeText"
        android:layout_alignStart="@+id/detailsTypeText"
        android:id="@+id/detailsType"
        android:paddingBottom="5dp"/>

    <TextView
        android:text="13:15 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailsTime"
        android:layout_alignTop="@+id/detailsDate"
        android:layout_toRightOf="@+id/detailsDate"
        android:layout_toEndOf="@+id/detailsDate"
        android:paddingTop="10dp"/>


</RelativeLayout>
